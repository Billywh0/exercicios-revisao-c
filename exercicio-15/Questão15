#include <stdio.h>
#include <locale.h>

int main(){
	setlocale(LC_ALL, "PORTUGUESE");
	float n1, n2;
	char op;
	
	printf("Digite dois numeros: ");
	scanf("%f %f", &n1, &n2);
	printf("\nOPERAÇÕES:\n+\n-\n*\n/\n\nQual operação deseja realizar? ");
	scanf(" %c", &op);
	
	if (op == '+'){
		printf("\n%2.f + %2.f = %2.f", n1, n2, n1 + n2);
	}
	else if (op == '-'){
		printf("\n%2.f - %2.f = %2.f", n1, n2, n1 - n2);
	}
	else if (op == '*'){
		printf("\n%2.f * %2.f = %2.f", n1, n2, n1 * n2);
	}
	else if (op == '/'){
		printf("\n%2.f / %2.f = %2.f", n1, n2, n1 / n2);
	}
	else{
		printf("\nOpção inválida!");
	}
}
